<h3>フォロワー (<%= @users.count %>)</h3>
<ol class="follow_users">
<% @users.each do |user| %>
  <li id="user-<%= user.id %>">
    <%= link_to gravatar_for(user, size: 50), user %>
    <span class="user"><%= link_to user.name, user %></span>
    <span class="content"><%= user.profile %></span></br></br>
  </li>
<% end %>
</ol>
