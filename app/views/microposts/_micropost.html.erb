<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user == micropost.user %>
       <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" } %>
    <% elsif current_user.favorites?(micropost) %>
        <%= button_to favorite_path(micropost), method: :delete, class: "btn btn-default btn-sm" do %>
        <%= content_tag :span, "解除", class: "glyphicon glyphicon-star" %>
        <% end %>
    <% else %>
        <%= button_to favorites_path(micropost), class: "btn btn-default btn-sm" do %>
        <%= content_tag :span, "登録", method: :post, remote: true, class: "glyphicon glyphicon-star" %>
        <% end %>
    <% end %>
  </span>
</li>
